<% show_post ||= false %>

<div class="span8 well">
  <em>"<%= comment.body %>"</em>
  <% if show_post %>
    on <%= link_to "#{comment.post.title}", post_path(comment.post) %>
  <% end %>
  <br/>
  <br/>
  <span class="quiet">by <%= link_to comment.creator.username, user_path(comment.creator) %></span> at
  <small><%= comment.created_at %></small>
</div>
