<% show_post ||= false %>

<div class="row">
  <div class="span0 well text-center">
    <% if logged_in? %>
      <%= link_to vote_post_comment_path(comment.post, comment, vote: true), method: 'post' do %>
        <i class="icon-arrow-up"></i>
      <% end %>
      <br/>
    <% end %>
  <%= comment.total_votes %> votes
    <% if logged_in? %>
      <br/>
      <%= link_to vote_post_comment_path(comment.post, comment, vote: true), method: 'post' do %>
        <i class="icon-arrow-down"></i>
      <% end %>
    <% end %>
  </div>
  <div class="span8 well">
    <em>"<%= comment.body %>"</em>
    <% if show_post %>
      on <%= link_to "#{comment.post.title}", post_path(comment.post) %>
    <% end %>
    <br/>
    <br/>
    <span class="quiet">by <%= link_to comment.creator.username, user_path(comment.creator) %></span> at
    <small><%= comment.created_at %></small>
  </div>
</div>