<div class="well">
  <%= form_for @user do |f| %>
    <div class="control-group">
      <%= f.label :username %>
      <%= f.text_field :username, placeholder: 'Enter a username' %>
      <br/>
    </div>
    <div class="control-group">
      <%= f.label :password %>
      <%= f.password_field :password, placeholder: 'Enter a password' %>
      <br/>
    </div>
    <div class="control-group">
      <%= f.label :time_zone, 'Select a time zone' %>
      <%= f.time_zone :time_zone, ActiveSupport::TimeZone.us_zones %>
    </div>
    <br/>
    <%= f.submit (@user.new_record? ? 'Register' : 'Update Profile'), class: 'btn btn-success' %>
  <% end %>
</div>