<div class="well">
  <%= form_for @user do |f| %>
    <div class="control-group">
      <%= f.label :username %>
      <%= f.text_field :username, placeholder: 'Enter a username' %>
      <br/>
    </div>
    <div class="control-group">
      <%= f.label :password %>
      <%= f.password_field :password, placeholder: 'Enter a password' %>
      <br/>
    </div>
    <br/>
    <%= f.submit (@user.new_record? ? 'Register' : 'Update Profile'), class: 'btn btn-success' %>
  <% end %>
</div>