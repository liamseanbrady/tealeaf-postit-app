<%= render 'shared/content_header', title: 'Log in' %>

<div class="well">
  <%= form_tag '/login' do %>
    <div class="control-group">
      <%= label_tag :username %>
      <%= text_field_tag :username, params[:username] || '', placeholder: 'Enter your username' %>
      <br/>
    </div>
    <div class="control-group">
      <%= label_tag :password %>
      <%= password_field_tag :password, params[:password] || '', placeholder: 'Enter your password' %>
      <br/>
    </div>
    <br/>
    <%= submit_tag 'Login', class: 'btn btn-success' %>
  <% end %>
</div>